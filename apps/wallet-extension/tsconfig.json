{
  "include": ["./src/**/*.ts", "./src/**/*.tsx", ".stories/**/*.tsx"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "incremental": false,
    "paths": {
      "@truststack/wallet-ui": ["../../packages/wallet-ui/src"],
      "@truststack/wallet-ui/*": ["../../packages/wallet-ui/src/*"]
    }
  }
}
